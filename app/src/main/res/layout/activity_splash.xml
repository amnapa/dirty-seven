<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/red"
    tools:context=".SplashActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="Dirty Seven"
        android:textColor="@color/white"
        android:textSize="40sp"
        android:textStyle="bold"
        android:drawableRight="@drawable/ic_baseline_seven"
        android:drawablePadding="15dp"
        android:id="@+id/txtAppName"
        android:drawableEnd="@drawable/ic_baseline_seven" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="created by mismattia"
        app:layout_constraintEnd_toEndOf="@+id/txtAppName"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="@+id/txtAppName"
        app:layout_constraintTop_toBottomOf="@+id/txtAppName"
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_marginTop="15dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>